@model UserSignUpForm



 <div  class="auth-wrapper">
    <div class="card">
        <div class="card-header">
            <h1>Create Account</h1>
        </div>

        <form id="signup-form" asp-action="SignUp" asp-controller="Auth" method="post" novalidate>


            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label class="form-label" asp-for="FullName"></label>
                <input class="form-input" asp-for="FullName" />
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-input" asp-for="Email" />
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-input" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="ConfirmPassword"></label>
                <input class="form-input" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form-checkbox-group">
                <label class="form-checkbox">
                    <input asp-for="TermsAndConditions" />
                    I accept Terms & Conditions
                </label>
                <span asp-validation-for="TermsAndConditions"></span>
            </div>

            <button type="submit" class="btn btn-submit">Create Account</button>

            <div class="card-footer">
                Already have an account?
                <a asp-action="SignIn" asp-controller="Auth">Login</a>
            </div>
        </form>
    </div>
</div>
@await Html.PartialAsync("_ValidationScripts") 


