@*ADD*@
@model Business.Dtos.AddProjectViewModel


@{
    ViewData["Title"] = "Add Project";
}


<div class="add-project-form">
    <form asp-action="Add" method="post" id="add-project-form" novalidate>

        <h1 class="h2">Add Project</h1>

        <div class="form-group">
            <label asp-for="FormData.ProjectName">Project Name</label>
            <input asp-for="FormData.ProjectName" />
            <span asp-validation-for="FormData.ProjectName" class="text-danger"></span>
        </div>

        <div class=form-group>
            <label asp-for="FormData.ClientId">Client Name</label>
            <select asp-for="FormData.ClientId" asp-items="Model.Clients">
                <option value="">--Choose Client--</option>
            </select>
            <span asp-validation-for="FormData.ClientId" class="text-danger"></span>
        </div>

        <div class=form-group>
            <label asp-for="FormData.Description">Description</label>
            <input asp-for="FormData.Description" />
            <span asp-validation-for="FormData.Description" class="text-danger"></span>
        </div>

        <div class=form-group>
            <label asp-for="FormData.StartDate">StartDate</label>
            <input asp-for="FormData.StartDate" type="date" />
            <span asp-validation-for="FormData.StartDate" class="text-danger"></span>
        </div>

        <div class=form-group>
            <label asp-for="FormData.EndDate">EndDate</label>
            <input asp-for="FormData.EndDate" type="date" />
            <span asp-validation-for="FormData.EndDate" class="text-danger"></span>
        </div>

        <div class=form-group>
            <label asp-for="FormData.Budget">Budget</label>
            <input asp-for="FormData.Budget" />
            <span asp-validation-for="FormData.Budget" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FormData.StatusId">Status</label>
            <select asp-for="FormData.StatusId" asp-items="Model.Statuses">
                <option value="">--Choose Status--</option>
            </select>
            <span asp-validation-for="FormData.StatusId" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-submit">Create</button>

    </form>
</div>

